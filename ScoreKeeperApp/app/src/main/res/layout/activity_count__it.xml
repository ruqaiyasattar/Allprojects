<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fir"
    android:alpha="0.79"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.scorekeeperapp.Count_It">
<TextView
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:id="@+id/tex1"
    android:text="TeamA"
    android:textColor="@color/colorPrimaryDark"
    android:textAlignment="center"
    android:textSize="34sp"
    android:background="@color/Edit1"
    android:layout_alignTop="@+id/tex2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
   <TextView
       android:textColor="@color/Edit1"
       android:layout_width="130dp"
       android:layout_height="wrap_content"
       android:id="@+id/scoreA"
       android:textSize="70sp"
       android:gravity="center"
       android:text="0"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" />

    <ImageButton

        android:id="@+id/imageView2"
        android:onClick="incrementTeamA"
        android:adjustViewBounds="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/green_button"
        android:layout_above="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="reset"
        android:textColor="#000000"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/rest"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/view"
        android:layout_toLeftOf="@+id/scoreB"
        android:layout_toStartOf="@+id/scoreB" />
    <ImageButton
        android:id="@+id/imageView1"
        android:onClick="decrementTeamA"
        android:adjustViewBounds="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/new_button"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="2dp"
        android:layout_height="360dp"
        android:background="#F44336"
        android:layout_weight="0.0100"
        android:layout_below="@+id/tex1"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />
    <TextView
        android:background="@color/Edit1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tex2"
        android:text="TeamB"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="34sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:id="@+id/scoreB"
        android:textColor="@color/Edit1"
        android:gravity="center"
        android:text="0"
        android:layout_alignTop="@+id/scoreA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/scoreA" />
    <ImageButton
        android:id="@+id/imageView3"
        android:adjustViewBounds="true"
        android:onClick="decrementTeamB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/new_button"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/imageView4"
        android:contentDescription="decrement"
        android:adjustViewBounds="true"
        android:onClick="incrementTeamB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/green_button"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />
</RelativeLayout>
