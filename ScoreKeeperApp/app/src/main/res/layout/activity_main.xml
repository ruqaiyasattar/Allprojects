<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars = "vertical"
    android:orientation="vertical"
    android:background="@drawable/fir"
android:alpha="0.79"
    android:id="@+id/bgimg"
    tools:context="com.example.android.scorekeeperapp.MainActivity">
<TextView
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="NAME YOUR TEAMS"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColor="@color/Edit1"/>
    <TextView
        android:textColor="@color/Edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="69sp"
        android:text="Count it!"/>
    <TextView
    android:layout_marginTop="48dp"
    android:layout_width="match_parent"
    android:textSize="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content"
    android:text="Team A"
    android:textAlignment="center"
    android:textColor="@color/Edit1"/>
    <EditText
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/Team_A"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:hint="Player 1"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal" />
    <TextView

        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:textSize="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textAlignment="center"
        android:textColor="@color/Edit1"/>
    <EditText
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:id="@+id/Team_B"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:hint="Player 2"
        android:textAlignment="center"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal" />
    <Button
        android:background="@drawable/rest"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/ok"/>
</LinearLayout>
