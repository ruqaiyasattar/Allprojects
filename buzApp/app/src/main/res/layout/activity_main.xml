<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.buzApp.MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/section_label"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <RelativeLayout
        android:scaleType="centerCrop"
        android:id="@+id/section_label1"
        android:layout_below="@+id/section_label"
        android:layout_width="match_parent"
        android:background="#AED581"
        android:layout_height="490dp"
        >
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/buttoN"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:background = "#33691E"
            android:layout_width="300sp"
            android:layout_height="26sp"
            android:textColor="#FFFFFF"
            android:text="Contact us"/>
        <Button
            android:id="@+id/buttoN1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttoN"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:background = "#33691E"
            android:layout_width="300sp"
            android:layout_height="26sp"
            android:textColor="#FFFFFF"
            android:text="Email us"/>
        <Button
            android:id="@+id/buttoN2"
            android:layout_below="@+id/buttoN1"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:background = "#33691E"
            android:layout_width="300sp"
            android:layout_height="26sp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="Download our contact info(vCard)"/>
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/buttoN3"
            android:layout_below="@+id/buttoN2"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:background = "#33691E"
            android:layout_width="300sp"
            android:layout_height="26sp"
            android:textColor="#FFFFFF"
            android:text="Connect with us"/>
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/buttoN4"
            android:layout_below="@+id/buttoN3"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:background = "#33691E"
            android:layout_width="300sp"
            android:layout_height="26sp"
            android:textColor="#FFFFFF"
            android:text="Follow us on twitter"/>
        <ImageView
            android:id="@+id/image9"
            android:src="@drawable/download"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/buttoN4"
            android:layout_width="199sp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="76dp"
            android:layout_height="60sp" />


    </RelativeLayout>
</RelativeLayout>
</ScrollView>